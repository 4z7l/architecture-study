<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "TextView_Default_Style" parent="Widget.AppCompat.TextView">
        <item name = "android:textSize">20dp</item>
        <item name = "android:textColor">@color/colorPrimary</item>
    </style>

    <style name = "TextView_Style_Item_Title" parent = "TextView_Default_Style">
<!--        <item name = "android:textColor">#FF0000</item>-->
        <item name = "android:textStyle">bold</item>
        <item name="android:text">Title</item>
    </style>

    <style name = "TextView_Style_Item_Descriptions" parent = "TextView_Default_Style">
        <item name = "android:textColor">@color/colorPrimaryDark</item>
        <item name = "android:textStyle">bold</item>
        <item name="android:text">Content</item>
    </style>
</resources>